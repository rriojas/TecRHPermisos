@model RecursosHumanosWeb.Models.ViewModels.PermissionReviewViewModel
@using System.Globalization
@{
    ViewData["Title"] = "Revisar Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var culture = new CultureInfo("es-MX");

    string FormatHora12(DateTime fecha)
    {
        return fecha.ToString("hh:mm tt", culture).ToUpper();
    }

    string FormatFechaCompleta(DateTime fecha)
    {
        return fecha.ToString("dd 'de' MMMM 'del' yyyy", culture);
    }

    var typeConfigurations = new Dictionary<int, Dictionary<string, (bool show, string label)>>
    {
        [2] = new Dictionary<string, (bool, string)>
        {
            ["Fecha1"] = (true, "Del día"),
            ["Fecha2"] = (true, "Al día"),
            ["Hora1"] = (false, "Hora entrada"),
            ["Hora2"] = (false, "Hora salida")
        },
        [3] = new Dictionary<string, (bool, string)>
        {
            ["Fecha1"] = (true, "En el día"),
            ["Fecha2"] = (false, "Al día"),
            ["Hora1"] = (true, "Hora de llegada"),
            ["Hora2"] = (false, "Hora salida")
        },
        [4] = new Dictionary<string, (bool, string)>
        {
            ["Fecha1"] = (true, "Del día"),
            ["Fecha2"] = (true, "Al día"),
            ["Hora1"] = (true, "Hora entrada"),
            ["Hora2"] = (true, "Hora salida")
        },
        [5] = new Dictionary<string, (bool, string)>
        {
            ["Fecha1"] = (true, "Del día"),
            ["Fecha2"] = (true, "Por el día"),
            ["Hora1"] = (true, "Hora entrada"),
            ["Hora2"] = (true, "Hora salida")
        }
    };

    var config = typeConfigurations.ContainsKey(Model.IdTipoPermiso) ? typeConfigurations[Model.IdTipoPermiso] : null;
    bool showDias = config != null && config["Fecha2"].show && Model.Fecha2.HasValue && Model.Dias.HasValue && Model.Dias.Value > 1;

    string? hora1 = config != null && config["Hora1"].show && Model.Fecha1 != null ? FormatHora12(Model.Fecha1.Value) : null;
    string? hora2 = config != null && config["Hora2"].show && Model.Fecha2.HasValue ? FormatHora12(Model.Fecha2.Value) : null;

    // Normalize evidence path
    string? evidenceUrl = null;
    string? evidencePath = null;
    bool evidenceExists = false;
    if (!string.IsNullOrEmpty(Model.Evidencia))
    {
        var raw = Model.Evidencia.Replace('\\', '/').Trim();
        if (!raw.StartsWith("/") && !raw.Contains("/"))
        {
            raw = "/Evidences/" + raw;
        }
        evidenceUrl = raw;
        var relativePath = raw.TrimStart('/');
        evidencePath = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", relativePath);
        evidenceExists = System.IO.File.Exists(evidencePath);
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/Permisos/create.css" asp-append-version="true" />
}

<div class="permission-request-container">
    <div class="permission-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-user-check"></i>
                Revisar Permiso #@Model.Id
            </h1>
            <p class="page-subtitle">Autoriza el permiso y define si es con o sin goce de sueldo</p>
        </div>
        <div class="header-decoration">
            <div class="floating-icon">
                <i class="fas fa-clipboard-check"></i>
            </div>
        </div>
    </div>

    <form asp-action="Review" method="post" class="permission-form" id="reviewPermissionForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-sections">
            <!-- Información del Solicitante -->
            <div class="form-section">
                <div class="section-header">
                    <h3><i class="fas fa-user"></i> Información del Solicitante</h3>
                    <span class="section-indicator">1</span>
                </div>
                <div class="datetime-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user"></i>
                            Nombre
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-user input-icon"></i>
                            <input type="text" class="form-control" value="@Model.NombreSolicitante" readonly style="background: var(--surface); font-weight: 600;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope"></i>
                            Correo
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="text" class="form-control" value="@Model.CorreoSolicitante" readonly style="background: var(--surface); font-weight: 600;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-building"></i>
                            Área
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-building input-icon"></i>
                            <input type="text" class="form-control" value="@Model.AreaSolicitante" readonly style="background: var(--surface); font-weight: 600;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-tag"></i>
                            Tipo de Permiso
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-tag input-icon"></i>
                            <input type="text" class="form-control" value="@Model.TipoPermisoDescripcion" readonly style="background: var(--surface); font-weight: 600; color: var(--primary-strong);" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fechas y Horarios -->
            <div class="form-section">
                <div class="section-header">
                    <h3><i class="fas fa-calendar-alt"></i> Fechas y Horarios</h3>
                    <span class="section-indicator">2</span>
                </div>
                <div class="datetime-grid">
                    @if (config != null && config["Fecha1"].show && Model.Fecha1 != null)
                    {
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar-day"></i>
                                @config["Fecha1"].label
                            </label>
                            <div class="input-wrapper">
                                <i class="input-icon fas fa-calendar"></i>
                                <input type="text" class="form-control" value="@FormatFechaCompleta(Model.Fecha1.Value)" readonly style="background: var(--surface); font-weight: 600;" />
                            </div>
                        </div>
                    }

                    @if (config != null && config["Hora1"].show && !string.IsNullOrEmpty(hora1))
                    {
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-clock"></i>
                                @config["Hora1"].label
                            </label>
                            <div class="input-wrapper">
                                <i class="input-icon fas fa-clock"></i>
                                <input type="text" class="form-control" value="@hora1" readonly style="background: var(--surface); font-weight: 600; color: var(--primary-strong);" />
                            </div>
                        </div>
                    }

                    @if (config != null && config["Fecha2"].show && Model.Fecha2.HasValue)
                    {
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar-check"></i>
                                @config["Fecha2"].label
                            </label>
                            <div class="input-wrapper">
                                <i class="input-icon fas fa-calendar"></i>
                                <input type="text" class="form-control" value="@FormatFechaCompleta(Model.Fecha2.Value)" readonly style="background: var(--surface); font-weight: 600;" />
                            </div>
                        </div>
                    }

                    @if (config != null && config["Hora2"].show && !string.IsNullOrEmpty(hora2))
                    {
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-clock"></i>
                                @config["Hora2"].label
                            </label>
                            <div class="input-wrapper">
                                <i class="input-icon fas fa-clock"></i>
                                <input type="text" class="form-control" value="@hora2" readonly style="background: var(--surface); font-weight: 600; color: var(--primary-strong);" />
                            </div>
                        </div>
                    }

                    @if (showDias)
                    {
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar-day"></i>
                                Días Solicitados
                            </label>
                            <div class="input-wrapper">
                                <i class="input-icon fas fa-calendar-day"></i>
                                <input type="text" class="form-control" value="@Model.Dias @(Model.Dias == 1 ? "día" : "días")" readonly style="background: var(--surface); font-weight: 600; color: var(--primary-strong);" />
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Motivo -->
            <div class="form-section">
                <div class="section-header">
                    <h3><i class="fas fa-comment-alt"></i> Motivo del Permiso</h3>
                    <span class="section-indicator">3</span>
                </div>
                <div class="form-group">
                    <label class="form-label">
                        Motivo detallado
                    </label>
                    <div class="textarea-wrapper">
                        <textarea class="form-control" readonly style="background: var(--surface); min-height: 100px; resize: none;">@Model.Motivo</textarea>
                    </div>
                </div>
            </div>

            <!-- CAMPO EDITABLE: Goce de Sueldo -->
            <div class="form-section" style="border: 3px solid var(--primary-medium); background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(79, 70, 229, 0.05) 100%);">
                <div class="section-header" style="background: var(--gradient-primary); color: white; border-radius: var(--radius-md); padding: var(--spacing-lg);">
                    <h3><i class="fas fa-money-bill-wave"></i> Autorización de Goce de Sueldo</h3>
                    <span class="section-indicator" style="background: white; color: var(--primary-strong);">4</span>
                </div>
                <div class="form-group" style="padding: var(--spacing-lg);">
                    <label class="form-label" style="font-size: 1.1rem; font-weight: 700; color: var(--primary-dark); margin-bottom: var(--spacing-md);">
                        <i class="fas fa-dollar-sign" style="color: var(--success-color);"></i>
                        ¿Este permiso es con goce de sueldo?
                        <span class="required">*</span>
                    </label>
                    <div class="permission-types" style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--spacing-md);">
                        <div class="permission-type-card goce-option" data-value="true" style="cursor: pointer;">
                            <input type="radio" id="goceTrue" name="Goce" value="true" asp-for="Goce" style="display: none;">
                            <label for="goceTrue" class="type-label" style="cursor: pointer; margin: 0;">
                                <div class="type-icon" style="background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <h4 style="color: var(--success-color); font-weight: 700;">Con Goce</h4>
                                <p>El empleado recibirá su salario completo</p>
                            </label>
                        </div>
                        <div class="permission-type-card goce-option" data-value="false" style="cursor: pointer;">
                            <input type="radio" id="goceFalse" name="Goce" value="false" asp-for="Goce" style="display: none;">
                            <label for="goceFalse" class="type-label" style="cursor: pointer; margin: 0;">
                                <div class="type-icon" style="background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);">
                                    <i class="fas fa-times-circle"></i>
                                </div>
                                <h4 style="color: var(--warning-color); font-weight: 700;">Sin Goce</h4>
                                <p>Se descontará del salario del empleado</p>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Goce" class="text-danger validation-message"></span>
                </div>
            </div>

            <!-- Evidencia (si existe) -->
            @if (!string.IsNullOrEmpty(Model.Evidencia) && evidenceExists)
            {
                <div class="form-section">
                    <div class="section-header">
                        <h3><i class="fas fa-paperclip"></i> Evidencia Adjunta</h3>
                        <span class="section-indicator">5</span>
                    </div>
                    <div id="pdfPreview" style="margin-top: var(--spacing-md);">
                        <div style="border: 2px solid var(--border-color); border-radius: var(--radius-md); overflow: hidden; background: var(--surface); box-shadow: 0 4px 12px var(--shadow-color);">
                            <div style="background: var(--gradient-primary); color: white; padding: var(--spacing-md) var(--spacing-lg); display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: var(--spacing-sm);">
                                <span style="font-weight: 600; display: flex; align-items: center; gap: var(--spacing-sm);">
                                    <i class="fas fa-file-pdf"></i> @System.IO.Path.GetFileName(evidenceUrl)
                                </span>
                                <a href="@evidenceUrl" target="_blank" download style="background: rgba(255,255,255,0.2); color: white; padding: var(--spacing-xs) var(--spacing-md); border-radius: var(--radius-sm); text-decoration: none; transition: all var(--transition-fast); display: inline-flex; align-items: center; gap: var(--spacing-xs); font-weight: 500;">
                                    <i class="fas fa-download"></i> Descargar
                                </a>
                            </div>
                            <iframe src="@evidenceUrl" style="width: 100%; height: 600px; border: none; display: block;"></iframe>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Botones de Acción -->
        <div class="form-actions">
            <div class="actions-content">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary" id="submitBtn" style="background: var(--gradient-primary); font-size: 1.1rem; padding: var(--spacing-md) var(--spacing-xl);">
                    <i class="fas fa-check-circle"></i>
                    Autorizar Permiso
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        (function () {
            'use strict';

            const form = document.getElementById('reviewPermissionForm');
            const submitBtn = document.getElementById('submitBtn');
            const goceOptions = document.querySelectorAll('.goce-option');
            const goceRadios = document.querySelectorAll('input[name="Goce"]');

            // Marcar opción seleccionada inicialmente
            const selectedRadio = document.querySelector('input[name="Goce"]:checked');
            if (selectedRadio) {
                const selectedCard = selectedRadio.closest('.goce-option');
                if (selectedCard) selectedCard.classList.add('active');
            }

            // Manejar click en las tarjetas de goce
            goceOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const value = this.dataset.value;
                    const radio = document.getElementById(value === 'true' ? 'goceTrue' : 'goceFalse');
                    
                    // Marcar el radio button
                    if (radio) radio.checked = true;
                    
                    // Actualizar clases activas
                    goceOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Envío del formulario
            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                // Validar que se haya seleccionado una opción de goce
                const goceSelected = document.querySelector('input[name="Goce"]:checked');
                if (!goceSelected) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Campo Requerido',
                        text: 'Debe seleccionar si el permiso es con o sin goce de sueldo.',
                        confirmButtonColor: 'var(--primary-medium)'
                    });
                    return;
                }

                // Confirmar autorización
                const goceValue = goceSelected.value === 'true';
                const goceText = goceValue ? 'CON GOCE de sueldo' : 'SIN GOCE de sueldo';

                const result = await Swal.fire({
                    title: '¿Autorizar este permiso?',
                    html: `
                        <div style="text-align: left; padding: 1rem;">
                            <p style="margin-bottom: 1rem;">Está a punto de autorizar este permiso:</p>
                            <ul style="list-style: none; padding: 0;">
                                <li style="margin: 0.5rem 0; padding: 0.5rem; background: var(--surface); border-radius: 8px;">
                                    <strong>Goce de sueldo:</strong> <span style="color: ${goceValue ? 'var(--success-color)' : 'var(--warning-color)'}; font-weight: 700;">${goceText}</span>
                                </li>
                            </ul>
                            <p style="margin-top: 1rem; color: var(--text-muted); font-size: 0.9rem;">
                                <i class="fas fa-info-circle"></i> Esta acción no se puede deshacer.
                            </p>
                        </div>
                    `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: 'var(--success-color)',
                    cancelButtonColor: '#6B7280',
                    confirmButtonText: '<i class="fas fa-check"></i> Sí, Autorizar',
                    cancelButtonText: '<i class="fas fa-times"></i> Cancelar',
                    customClass: {
                        popup: 'swal-popup-custom',
                        title: 'swal-title-custom'
                    }
                });

                if (!result.isConfirmed) return;

                // Deshabilitar botón y mostrar loading
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Autorizando...';

                try {
                    const formData = new FormData(form);
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                    const response = await fetch(form.action, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token
                        },
                        body: formData
                    });

                    if (!response.ok) throw new Error('Error HTTP: ' + response.status);

                    const data = await response.json();

                    if (data.success) {
                        await Swal.fire({
                            icon: 'success',
                            title: data.title || '¡Autorizado!',
                            text: data.message || 'El permiso ha sido autorizado exitosamente.',
                            confirmButtonColor: 'var(--success-color)',
                            timer: 3000,
                            timerProgressBar: true
                        });

                        if (data.redirectUrl) {
                            window.location.href = data.redirectUrl;
                        } else {
                            window.location.href = '/Permisos/Index';
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: data.title || 'Error',
                            text: data.message || 'No se pudo autorizar el permiso.',
                            confirmButtonColor: 'var(--danger-color)'
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error del Servidor',
                        text: error.message || 'No se pudo conectar con el servidor.',
                        confirmButtonColor: 'var(--danger-color)'
                    });
                } finally {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Autorizar Permiso';
                }
            });

            // Animación de entrada
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, 100 * (index + 1));
            });
        })();
    </script>
}
