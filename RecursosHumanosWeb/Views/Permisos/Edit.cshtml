@model RecursosHumanosWeb.Models.ViewModels.PermissionsCreateViewModel
@{
    ViewData["Title"] = "Modificar Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdministrador = ViewBag.IsAdministrador;
    bool isAutorizador = ViewBag.IsAutorizador;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Permisos/create.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

<div class="permission-request-container">
    <div class="permission-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-edit"></i>
                Modificar Permiso
            </h1>
            <p class="page-subtitle">Actualice los detalles de su solicitud</p>
        </div>
        <div class="header-decoration">
            <div class="floating-icon">
                <i class="fas fa-user-edit"></i>
            </div>
        </div>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="permission-form" id="editPermissionForm"
          data-is-administrador="@isAdministrador"
          data-is-autorizador="@isAutorizador">
        <div class="form-sections">
            <!-- Sección: Fechas y Horarios (prefill según IdTipoPermiso) -->
            <div class="form-section" id="datetime-section">
                <div class="section-header">
                    <h3><i class="fas fa-calendar-alt"></i> Fechas y Horarios</h3>
                    <span class="section-indicator">1</span>
                </div>
                <div class="datetime-grid">
                    <div class="form-group" id="fecha1Date-group">
                        <label asp-for="Fecha1Date" class="form-label">
                            <span id="fecha1Date-label">Fecha de inicio</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-calendar input-icon"></i>
                            <input asp-for="Fecha1Date" type="date" class="form-control" value="@Model.Fecha1Date?.ToString("yyyy-MM-dd")" required />
                        </div>
                        <span asp-validation-for="Fecha1Date" class="text-danger validation-message"></span>
                    </div>
                    <div class="form-group" id="hora1Time-group">
                        <label asp-for="Hora1Time" class="form-label">
                            <span id="hora1Time-label">Hora de entrada</span>
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-clock input-icon"></i>
                            <input asp-for="Hora1Time" type="time" class="form-control" value="@Model.Hora1Time" />
                        </div>
                        <span asp-validation-for="Hora1Time" class="text-danger validation-message"></span>
                    </div>
                    <div class="form-group" id="fecha2Date-group">
                        <label asp-for="Fecha2Date" class="form-label">
                            <span id="fecha2Date-label">Fecha de fin</span>
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-calendar input-icon"></i>
                            <input asp-for="Fecha2Date" type="date" class="form-control" value="@Model.Fecha2Date?.ToString("yyyy-MM-dd")" />
                        </div>
                        <span asp-validation-for="Fecha2Date" class="text-danger validation-message"></span>
                    </div>
                    <div class="form-group" id="hora2Time-group">
                        <label asp-for="Hora2Time" class="form-label">
                            <span id="hora2Time-label">Hora de salida</span>
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-clock input-icon"></i>
                            <input asp-for="Hora2Time" type="time" class="form-control" value="@Model.Hora2Time" />
                        </div>
                        <span asp-validation-for="Hora2Time" class="text-danger validation-message"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Fecha1" />
                <input type="hidden" asp-for="Fecha2" />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="IdTipoPermiso" value="@Model.IdTipoPermiso" />
            </div>

            <!-- Sección: Motivo -->
            <div class="form-section" id="reason-section">
                <div class="section-header">
                    <h3><i class="fas fa-comment-alt"></i> Motivo del Permiso</h3>
                    <span class="section-indicator">2</span>
                </div>
                <div class="form-group">
                    <label asp-for="Motivo" class="form-label">
                        Explique detalladamente el motivo de su solicitud
                        <span class="required">*</span>
                    </label>
                    <div class="textarea-wrapper">
                        <textarea asp-for="Motivo" class="form-control" rows="4" maxlength="255" required>@Model.Motivo</textarea>
                        <div class="char-counter">
                            <span id="char-count">0</span>/255 caracteres
                        </div>
                    </div>
                    <span asp-validation-for="Motivo" class="text-danger validation-message"></span>
                </div>
            </div>

            <!-- Sección: Goce (solo Administrador/Autorizador) -->
            @if (isAdministrador || isAutorizador)
            {
                <div class="form-section" id="goce-section">
                    <div class="section-header">
                        <h3><i class="fas fa-money-bill-wave"></i> Goce de Sueldo</h3>
                        <span class="section-indicator">3</span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Goce" checked="@Model.Goce" /> @Html.DisplayNameFor(model => model.Goce)
                        </label>
                        <span asp-validation-for="Goce" class="text-danger validation-message"></span>
                    </div>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="Goce" value="@Model.Goce" />
            }

            <!-- Sección: Evidencia -->
            <div class="form-section" id="evidence-section">
                <div class="section-header">
                    <h3><i class="fas fa-paperclip"></i> Documentación de Soporte</h3>
                    <span class="section-indicator">@(isAdministrador || isAutorizador ? "4" : "3")</span>
                </div>
                <div class="form-group">
                    <label asp-for="EvidenceFile" class="form-label">
                        Adjuntar documento PDF (opcional)
                    </label>
                    <div class="file-upload-area" id="fileUploadArea">
                        <input asp-for="EvidenceFile" type="file" accept=".pdf" class="file-input" id="evidenceFile">
                        <div class="file-upload-content">
                            <div class="file-upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p class="file-upload-text">
                                <strong>Haga clic para seleccionar</strong> o arrastre el archivo aquí
                            </p>
                            <p class="file-upload-hint">Solo archivos PDF, máximo 5MB</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Evidencia))
                        {
                            <div class="file-preview" id="filePreview">
                                <div class="file-info">
                                    <i class="fas fa-file-pdf file-icon"></i>
                                    <span class="file-name" id="fileName">@System.IO.Path.GetFileName(Model.Evidencia.TrimStart('/'))</span>
                                    <button type="button" class="remove-file" id="removeFile">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <input type="hidden" asp-for="Evidencia" value="@Model.Evidencia" />
                </div>
            </div>
        </div>

        <!-- Botones de Acción -->
        <div class="form-actions">
            <div class="actions-content">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <i class="fas fa-save"></i>
                    Guardar Cambios
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/Permisos/edit.js" asp-append-version="true"></script>
}