@model RecursosHumanosWeb.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Usuarios/create-users.css" asp-append-version="true" />
}

<div class="container fade-in">
    <div class="page-header">
        <h1 class="page-title text-gradient">
            <i class="icon-user-plus"></i> Crear Nuevo Usuario
        </h1>
        <p class="page-subtitle">Complete los campos para agregar un nuevo usuario al sistema</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" class="create-usuario-form">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Información Personal -->
                <h4 class="section-title">Información Personal</h4>
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" placeholder="ejemplo@dominio.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Clave" class="form-label"></label>
                    <input asp-for="Clave" class="form-control" type="password" placeholder="Ingrese una contraseña" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>

                <!-- Información Organizacional -->
                <h4 class="section-title">Información Organizacional</h4>
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdTipoUsuario" class="form-label"></label>
                        <select asp-for="IdTipoUsuario" class="form-select" asp-items="ViewBag.IdTipoUsuario">
                            <option value="">Seleccione un tipo de usuario</option>
                        </select>
                        <span asp-validation-for="IdTipoUsuario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdArea" class="form-label"></label>
                        <select asp-for="IdArea" class="form-select" asp-items="ViewBag.IdArea">
                            <option value="">Seleccione un área</option>
                        </select>
                        <span asp-validation-for="IdArea" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdDepartamento" class="form-label"></label>
                        <select asp-for="IdDepartamento" class="form-select" asp-items="ViewBag.IdDepartamento">
                            <option value="">Seleccione un departamento</option>
                        </select>
                        <span asp-validation-for="IdDepartamento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdPuesto" class="form-label"></label>
                        <select asp-for="IdPuesto" class="form-select" asp-items="ViewBag.IdPuesto">
                            <option value="">Seleccione un puesto</option>
                        </select>
                        <span asp-validation-for="IdPuesto" class="text-danger"></span>
                    </div>
                </div>

                <!-- Información del Sistema -->
                <h4 class="section-title">Información del Sistema</h4>
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdUsuarioCrea" class="form-label"></label>
                        <select asp-for="IdUsuarioCrea" class="form-select" asp-items="ViewBag.IdUsuarioCrea">
                            <option value="">Seleccione el usuario que crea</option>
                        </select>
                        <span asp-validation-for="IdUsuarioCrea" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdUsuarioModifica" class="form-label"></label>
                        <select asp-for="IdUsuarioModifica" class="form-select" asp-items="ViewBag.IdUsuarioModifica">
                            <option value="">Seleccione el usuario que modifica (opcional)</option>
                        </select>
                        <span asp-validation-for="IdUsuarioModifica" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="IdApiKey" class="form-label"></label>
                        <input asp-for="IdApiKey" class="form-control" placeholder="Ingrese la clave API (opcional)" />
                        <span asp-validation-for="IdApiKey" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="form-group mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="icon-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="icon-save"></i> Crear
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/create-usuario.js"></script>
}