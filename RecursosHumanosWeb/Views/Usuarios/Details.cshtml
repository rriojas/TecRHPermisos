@model RecursosHumanosWeb.Models.ViewModels.Usuario.UsuarioDetailsViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Permisos/create.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<div class="bg-gradient-to-br min-h-screen py-8 px-4 sm:px-6 lg:px-8 mb-5 pb-5">
<div class="max-w-7xl mx-auto">

    <div class="relative mb-8 pt-4 content-page-header">


        <div class="bg-white rounded-2xl shadow-lg card-hover overflow-hidden mb-8">

            <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-8 py-6">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                    <div class="flex items-center gap-4">
                        <div class="w-16 h-16 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center text-white text-2xl font-bold border-2 border-white/30">
                            @(Model.Nombre?.Substring(0, 1).ToUpper() ?? "U")
                        </div>
                        <div>
                            <h2 class="text-2xl font-semibold text-white mb-1">@Model.Nombre</h2>
                            <p class="text-blue-100 flex items-center gap-2">
                                <i class="fas fa-envelope text-sm"></i> @Model.Correo
                            </p>
                        </div>
                    </div>
                    <div class="status-badge @(Model.Estatus == true ? "bg-green-500" : "bg-red-500") text-white px-4 py-2 rounded-full text-sm font-medium flex items-center shadow-sm">
                        <i class="@(Model.Estatus == true ? "fas fa-check-circle" : "fas fa-times-circle") mr-2"></i>
                        @(Model.Estatus == true ? "Activo" : "Inactivo")
                    </div>
                </div>
            </div>

            <div class="p-6 sm:p-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

                    <div class="space-y-6">
                        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2 mb-4 flex items-center gap-2">
                            <i class="fas fa-building text-blue-600"></i>
                            Información Organizacional
                        </h3>

                        <div class="info-item bg-gray-50 p-4 rounded-lg border border-gray-100">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-briefcase text-purple-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Puesto</span>
                            </div>
                            <p class="text-lg font-semibold text-gray-900 ml-11">
                                @(Model.PuestoDescripcion ?? "No asignado")
                            </p>
                        </div>

                        <div class="info-item bg-gray-50 p-4 rounded-lg border border-gray-100">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-sitemap text-orange-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Departamento</span>
                            </div>
                            <p class="text-lg font-semibold text-gray-900 ml-11">
                                @(Model.DepartamentoDescripcion ?? "No asignado")
                            </p>
                        </div>

                        <div class="info-item bg-gray-50 p-4 rounded-lg border border-gray-100">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-teal-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-layer-group text-teal-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Área</span>
                            </div>
                            <p class="text-lg font-semibold text-gray-900 ml-11">
                                @(Model.AreaDescripcion ?? "No asignado")
                            </p>
                        </div>
                    </div>

                    <div class="space-y-6">
                        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2 mb-4 flex items-center gap-2">
                            <i class="fas fa-shield-alt text-blue-600"></i>
                            Seguridad y Sistema
                        </h3>

                        <div class="info-item bg-gray-50 p-4 rounded-lg border border-gray-100">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user-tag text-indigo-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Tipo de Usuario / Rol</span>
                            </div>
                            <p class="text-lg font-semibold text-gray-900 ml-11">
                                @(Model.TipoUsuarioNombre ?? "Estándar")
                            </p>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div class="info-item p-2">
                                <p class="text-xs text-gray-500 uppercase">Fecha de Creación</p>
                                <p class="text-sm font-medium text-gray-900">
                                    <i class="fas fa-calendar-plus text-green-500 mr-1"></i>
                                    @Model.FechaCreacion.ToString("dd/MM/yyyy hh:mm tt")
                                </p>
                            </div>
                            <div class="info-item p-2">
                                <p class="text-xs text-gray-500 uppercase">Última Modificación</p>
                                <p class="text-sm font-medium text-gray-900">
                                    <i class="fas fa-calendar-check text-blue-500 mr-1"></i>
                                    @(Model.FechaModificacion?.ToString("dd/MM/yyyy hh:mm tt") ?? "N/A")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center gap-2">
                        <i class="fas fa-history text-blue-600"></i>
                        Auditoría de Registro
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center shadow-lg shadow-green-200">
                                    <i class="fas fa-plus text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500">Registrado por</p>
                                    <p class="text-lg font-semibold text-gray-900">
                                        @(Model.UsuarioCreaNombre ?? "Sistema")
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center shadow-lg shadow-orange-200">
                                    <i class="fas fa-pen text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500">Última edición por</p>
                                    <p class="text-lg font-semibold text-gray-900">
                                        @(Model.UsuarioModificaNombre ?? "Sin modificaciones")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-gray-50 px-8 py-6 border-t border-gray-200">
                <div class="flex flex-col sm:flex-row gap-4 justify-end items-center">
                    <a asp-action="Index" class="w-full sm:w-auto bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 flex items-center justify-center gap-2 shadow-sm">
                        <i class="fas fa-arrow-left"></i>
                        Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
}