@model RecursosHumanosWeb.Models.ViewModels.Usuario.UsuarioDetailsViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Permisos/create.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<div class="details-container">
    <div class="card details-card shadow-lg rounded-3 overflow-hidden mb-4">
        
        <div class="details-header-gradient text-white px-4 px-md-5 py-4">
            <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="details-avatar rounded-circle d-flex align-items-center justify-content-center text-white fs-3 fw-bold">
                        @(Model.Nombre?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                    <div>
                        <h2 class="h4 fw-semibold mb-1">@Model.Nombre</h2>
                        <p class="mb-0 d-flex align-items-center gap-2" style="color: #dbeafe; opacity: 0.9;">
                            <i class="fas fa-envelope small"></i> @Model.Correo
                        </p>
                    </div>
                </div>
                <div class="badge @(Model.Estatus == true ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill shadow-sm">
                    <i class="@(Model.Estatus == true ? "fas fa-check-circle" : "fas fa-times-circle") me-2"></i>
                    @(Model.Estatus == true ? "Activo" : "Inactivo")
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5 bg-white">
            <div class="row g-4">
                
                <div class="col-12 col-lg-6">
                    <h3 class="section-title h5 text-dark d-flex align-items-center gap-2">
                        <i class="fas fa-building text-primary"></i>
                        Información Organizacional
                    </h3>

                    <div class="mb-3">
                        <div class="info-card info-card-purple p-3 rounded-3">
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <div class="icon-circle purple-circle">
                                    <i class="fas fa-briefcase small"></i>
                                </div>
                                <span class="small fw-medium text-secondary text-uppercase">Puesto</span>
                            </div>
                            <p class="h6 fw-semibold text-dark mb-0 ms-5">
                                @(Model.PuestoDescripcion ?? "No asignado")
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="info-card info-card-orange p-3 rounded-3">
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <div class="icon-circle orange-circle">
                                    <i class="fas fa-sitemap small"></i>
                                </div>
                                <span class="small fw-medium text-secondary text-uppercase">Departamento</span>
                            </div>
                            <p class="h6 fw-semibold text-dark mb-0 ms-5">
                                @(Model.DepartamentoDescripcion ?? "No asignado")
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <h3 class="section-title h5 text-dark d-flex align-items-center gap-2">
                        <i class="fas fa-shield-alt text-primary"></i>
                        Seguridad y Sistema
                    </h3>

                    <div class="mb-3">
                        <div class="info-card info-card-indigo p-3 rounded-3">
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <div class="icon-circle indigo-circle">
                                    <i class="fas fa-user-tag small"></i>
                                </div>
                                <span class="small fw-medium text-secondary text-uppercase">Rol de Acceso</span>
                            </div>
                            <p class="h6 fw-semibold text-dark mb-0 ms-5">
                                @(Model.TipoUsuarioNombre ?? "Usuario Estándar")
                            </p>
                        </div>
                    </div>

                    <div class="detail-grid mt-4">
                        <div class="p-3 border-start border-success border-3 bg-light rounded-end">
                            <p class="small text-secondary text-uppercase mb-1" style="font-size: 0.7rem;">Fecha Registro</p>
                            <p class="small fw-bold text-dark mb-0">
                                <i class="fas fa-clock text-success me-1"></i> @Model.FechaCreacion.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                        <div class="p-3 border-start border-primary border-3 bg-light rounded-end">
                            <p class="small text-secondary text-uppercase mb-1" style="font-size: 0.7rem;">Último Cambio</p>
                            <p class="small fw-bold text-dark mb-0">
                                <i class="fas fa-history text-primary me-1"></i> @(Model.FechaModificacion?.ToString("dd/MM/yyyy") ?? "N/A")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5 pt-4 border-top">
                <h3 class="h5 fw-semibold text-dark mb-4">Auditoría de Registro</h3>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="audit-card audit-created bg-light rounded-3 p-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="audit-icon bg-success text-white">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div>
                                    <p class="small text-secondary mb-0">Creado por</p>
                                    <p class="fw-bold text-dark mb-0">@(Model.UsuarioCreaNombre ?? "Sistema")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="audit-card audit-modified bg-light rounded-3 p-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="audit-icon bg-warning text-white">
                                    <i class="fas fa-user-edit"></i>
                                </div>
                                <div>
                                    <p class="small text-secondary mb-0">Modificado por</p>
                                    <p class="fw-bold text-dark mb-0">@(Model.UsuarioModificaNombre ?? "N/A")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer py-4 px-4 px-md-5 bg-gray border-top-0 d-flex justify-content-end align-items-center">
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-primary shadow-sm">
                    <i class="fas fa-chevron-left"></i>
                    Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>