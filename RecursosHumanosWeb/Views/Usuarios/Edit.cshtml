@model RecursosHumanosWeb.Models.ViewModels.Usuario.UsuarioUpdateViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Ensure select lists exist to avoid NullReferenceExceptions
    ViewBag.IdTipoUsuario = ViewBag.IdTipoUsuario ?? new SelectList(new List<SelectListItem>());
    ViewBag.IdArea = ViewBag.IdArea ?? new SelectList(new List<SelectListItem>());
    ViewBag.IdDepartamento = ViewBag.IdDepartamento ?? new SelectList(new List<SelectListItem>());
    ViewBag.IdPuesto = ViewBag.IdPuesto ?? new SelectList(new List<SelectListItem>());
}

@section Styles {
    <link rel="stylesheet" href="~/css/Permisos/create.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6b7280;
            transition: color 0.2s;
        }
        .password-toggle:hover {
            color: #3b82f6;
        }
        .password-wrapper {
            position: relative;
        }
        .info-box {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 16px;
            color: white;
            margin-bottom: 24px;
        }
        .info-box i {
            font-size: 1.5rem;
            margin-right: 12px;
        }
        .password-strength {
            height: 4px;
            border-radius: 2px;
            margin-top: 8px;
            transition: all 0.3s ease;
        }
        .password-hint {
            font-size: 0.875rem;
            color: #6b7280;
            margin-top: 4px;
        }
    </style>
}

<div class="permission-request-container">
    <!-- Header -->
    <div class="permission-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-user-edit"></i>
                Editar Usuario
            </h1>
            <p class="page-subtitle">Actualiza la información del usuario @Model.Nombre</p>
        </div>
        <div class="header-decoration">
            <div class="floating-icon">
                <i class="fas fa-id-card"></i>
            </div>
        </div>
    </div>

    <!-- Info Box -->
    <div class="info-box">
        <div class="flex items-center">
            <i class="fas fa-info-circle"></i>
            <div>
                <p class="font-semibold mb-1">Información importante</p>
                <p class="text-sm opacity-90">Los campos marcados con (*) son obligatorios. La contraseña debe tener entre 6 y 12 caracteres.</p>
            </div>
        </div>
    </div>

    <!-- Form -->
    <form asp-action="Edit" method="post" class="permission-form" id="editUserForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <input type="hidden" asp-for="IdUsuario" />
        <input type="hidden" asp-for="Estatus" />

        <div class="form-sections">
            <!-- Sección 1: Información Personal -->
            <div class="form-section">
                <div class="section-header">
                    <h3><i class="fas fa-user"></i> Información Personal</h3>
                    <span class="section-indicator">1</span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">
                                <i class="fas fa-signature text-blue-600"></i>
                                Nombre Completo
                                <span class="required">*</span>
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger validation-message"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Correo" class="form-label">
                                <i class="fas fa-envelope text-blue-600"></i>
                                Correo Electrónico
                                <span class="required">*</span>
                            </label>
                            <input asp-for="Correo" type="email" class="form-control" placeholder="usuario@ejemplo.com" />
                            <span asp-validation-for="Correo" class="text-danger validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Clave" class="form-label">
                                <i class="fas fa-lock text-blue-600"></i>
                                Nueva Contraseña
                                <span class="text-muted">(Opcional)</span>
                            </label>
                            <div class="password-wrapper">
                                <input asp-for="Clave" type="password" class="form-control" id="password-input" 
                                       placeholder="Dejar vacío para mantener la actual" 
                                       minlength="6" maxlength="12" />
                                <i class="fas fa-eye password-toggle" id="toggle-password"></i>
                            </div>
                            <div class="password-strength" id="password-strength"></div>
                            <small class="password-hint">
                                <i class="fas fa-info-circle"></i>
                                La contraseña debe tener entre <strong>6 y 12 caracteres</strong>. Dejar vacío para no cambiarla.
                            </small>
                            <span asp-validation-for="Clave" class="text-danger validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección 2: Información Organizacional -->
            <div class="form-section">
                <div class="section-header">
                    <h3><i class="fas fa-building"></i> Información Organizacional</h3>
                    <span class="section-indicator">2</span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdTipoUsuario" class="form-label">
                                <i class="fas fa-user-tag text-indigo-600"></i>
                                Tipo de Usuario / Rol
                                <span class="required">*</span>
                            </label>
                            <select asp-for="IdTipoUsuario" class="form-control" asp-items="ViewBag.IdTipoUsuario">
                                <option value="">-- Seleccione un tipo --</option>
                            </select>
                            <span asp-validation-for="IdTipoUsuario" class="text-danger validation-message"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdArea" class="form-label">
                                <i class="fas fa-layer-group text-teal-600"></i>
                                Área
                                <span class="required">*</span>
                            </label>
                            <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea">
                                <option value="">-- Seleccione un área --</option>
                            </select>
                            <span asp-validation-for="IdArea" class="text-danger validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdDepartamento" class="form-label">
                                <i class="fas fa-sitemap text-orange-600"></i>
                                Departamento
                                <span class="required">*</span>
                            </label>
                            <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.IdDepartamento">
                                <option value="">-- Seleccione un departamento --</option>
                            </select>
                            <span asp-validation-for="IdDepartamento" class="text-danger validation-message"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdPuesto" class="form-label">
                                <i class="fas fa-briefcase text-purple-600"></i>
                                Puesto
                                <span class="required">*</span>
                            </label>
                            <select asp-for="IdPuesto" class="form-control" asp-items="ViewBag.IdPuesto">
                                <option value="">-- Seleccione un puesto --</option>
                            </select>
                            <span asp-validation-for="IdPuesto" class="text-danger validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <div class="actions-content">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <i class="fas fa-save"></i>
                    Guardar Cambios
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle password visibility
            const togglePassword = document.getElementById('toggle-password');
            const passwordInput = document.getElementById('password-input');
            const passwordStrength = document.getElementById('password-strength');
            
            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    
                    // Toggle icon
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });

                // Password strength indicator
                passwordInput.addEventListener('input', function() {
                    const length = this.value.length;
                    
                    if (length === 0) {
                        passwordStrength.style.width = '0%';
                        passwordStrength.style.backgroundColor = 'transparent';
                    } else if (length < 6) {
                        passwordStrength.style.width = '33%';
                        passwordStrength.style.backgroundColor = '#ef4444'; // Red
                    } else if (length < 9) {
                        passwordStrength.style.width = '66%';
                        passwordStrength.style.backgroundColor = '#f59e0b'; // Orange
                    } else {
                        passwordStrength.style.width = '100%';
                        passwordStrength.style.backgroundColor = '#10b981'; // Green
                    }
                });
            }

            // Form validation feedback
            const form = document.getElementById('editUserForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const password = passwordInput.value;
                    
                    // Validar longitud si se ingresó contraseña
                    if (password && (password.length < 6 || password.length > 12)) {
                        e.preventDefault();
                        alert('La contraseña debe tener entre 6 y 12 caracteres.');
                        return false;
                    }
                    
                    const submitBtn = document.getElementById('submitBtn');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                    }
                });
            }

            // Add smooth animations to form sections
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    section.style.transition = 'all 0.5s ease-out';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 150);
            });
        });
    </script>
}
