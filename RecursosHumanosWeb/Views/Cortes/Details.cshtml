@model RecursosHumanosWeb.Models.DTOs.CorteDetailsDTO
@using System.Text.Json
@{
    ViewData["Title"] = "Detalles del Corte";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Permisos/create.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/Cortes/Index.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<!-- Inputs ocultos para datos de gráficos -->
@if (!Model.Permisos.Any())
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-8" role="alert">
        <p class="font-bold">Sin datos</p>
        <p>No hay permisos asociados a este corte.</p>
    </div>
}
<input type="hidden" id="permisosPorTipo" value="@System.Web.HttpUtility.HtmlEncode(Model.PermisosPorTipoJson)" />
<input type="hidden" id="permisosPorArea" value="@System.Web.HttpUtility.HtmlEncode(Model.PermisosPorAreaJson)" />
<input type="hidden" id="tendencia" value="@System.Web.HttpUtility.HtmlEncode(Model.TendenciaJson)" />
<input type="hidden" id="heatmapData" value="@System.Web.HttpUtility.HtmlEncode(Model.HeatmapDataJson)" />
<input type="hidden" id="kpiData" value="@System.Web.HttpUtility.HtmlEncode(Model.KpiDataJson)" />
<input type="hidden" id="conGoce" value="@Model.ConGoce" />
<input type="hidden" id="sinGoce" value="@Model.SinGoce" />

<div class="bg-gradient-to-br min-h-screen py-8 px-4 sm:px-6 lg:px-8 mb-5 pb-5">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="permission-header">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="fas fa-calendar-check"></i>
                    Detalles del Corte
                </h1>
                <p class="text-gray-600 text-lg">Información del período de corte #@Model.Id</p>
            </div>
            <div class="header-decoration">
                <div class="floating-icon">
                    <i class="fas fa-user-clock"></i>
                </div>
            </div>
        </div>

        <!-- Main Card -->
        <div class="bg-white rounded-2xl shadow-lg card-hover overflow-hidden mb-8">
            <!-- Card Header -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-8 py-6">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                    <div>
                        <h2 class="text-2xl font-semibold text-white mb-1">Período de Corte</h2>
                        <p class="text-blue-100">ID: #@Model.Id</p>
                    </div>
                    <div class="status-badge bg-green-500 text-white px-4 py-2 rounded-full text-sm font-medium flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>
                        @(Model.Estatus ? "Activo" : "Inactivo")
                    </div>
                </div>
            </div>

            <!-- Card Content -->
            <div class="p-6 sm:p-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Fechas del Período -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2 mb-4">
                            <i class="fas fa-calendar-check text-blue-600 mr-2"></i>
                            Fechas del Período
                        </h3>
                        <div class="info-item p-4 rounded-lg">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-play text-green-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Fecha de Inicio</span>
                            </div>
                            <p class="text-xl font-semibold text-gray-900 ml-11">@Model.Inicia?.ToString("dd MMMM yyyy")</p>
                            <p class="text-sm text-gray-500 ml-11">@Model.Inicia?.ToString("hh:mm tt")</p>
                        </div>
                        <div class="info-item p-4 rounded-lg">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-stop text-red-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Fecha de Término</span>
                            </div>
                            <p class="text-xl font-semibold text-gray-900 ml-11">@Model.Termina?.ToString("dd MMMM yyyy")</p>
                            <p class="text-sm text-gray-500 ml-11">@Model.Termina?.ToString("hh:mm tt")</p>
                        </div>
                    </div>
                    <!-- Información del Sistema -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2 mb-4">
                            <i class="fas fa-cog text-blue-600 mr-2"></i>
                            Información del Sistema
                        </h3>
                        <div class="info-item p-4 rounded-lg">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-plus text-blue-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Fecha de Creación</span>
                            </div>
                            <p class="text-lg font-semibold text-gray-900 ml-11">@Model.FechaCreacion.ToString("dd MMMM yyyy")</p>
                            <p class="text-sm text-gray-500 ml-11">@Model.FechaCreacion.ToString("hh:mm tt")</p>
                        </div>
                        <div class="info-item p-4 rounded-lg">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-edit text-orange-600 text-sm"></i>
                                </div>
                                <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Última Modificación</span>
                            </div>
                            <p class="text-lg font-semibold text-gray-900 ml-11">@(Model.FechaModificacion?.ToString("dd MMMM yyyy") ?? "No modificado")</p>
                            <p class="text-sm text-gray-500 ml-11">@(Model.FechaModificacion?.ToString("hh:mm tt") ?? "N/A")</p>
                        </div>
                    </div>
                </div>
                <!-- Usuarios Section -->
                <div class="mt-8 pt-8 border-t border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6">
                        <i class="fas fa-users text-blue-600 mr-2"></i>
                        Información de Usuarios
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 rounded-xl p-6">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user-plus text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500">Creado por</p>
                                    <p class="text-lg font-semibold text-gray-900">@Model.UsuarioCrea</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <i class="fas fa-shield-alt text-green-500"></i>
                                <span>Administrador</span>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded-xl p-6">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user-edit text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500">Modificado por</p>
                                    <p class="text-lg font-semibold text-gray-900">@(Model.UsuarioModifica ?? "N/A")</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <i class="fas fa-user-tie text-orange-500"></i>
                                <span>Supervisor</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Action Buttons -->
            <div class="bg-gray-50 px-8 py-6 border-t border-gray-200">
                <div class="flex flex-col sm:flex-row gap-4 justify-between items-center">
                    <div class="flex gap-3">
                        <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 flex items-center gap-2">
                            <i class="fas fa-list"></i>
                            Volver a la Lista
                        </a>
                    </div>
                    <div class="flex gap-2">
                        <!-- Menú de Exportación -->
                        <div class="export-menu-container">
                            <button id="exportMenuButton" type="button" class="export-button">
                                <i class="fas fa-download"></i>
                                Exportar
                                <i id="chevronIcon" class="fas fa-chevron-down chevron-icon"></i>
                            </button>
                            <!-- Menú desplegable -->
                            <div id="exportMenu" class="export-dropdown hidden">
                                <div class="export-dropdown-content">
                                    <a asp-action="ExportToExcel" asp-route-id="@Model.Id" class="export-option excel">
                                        <i class="fas fa-file-excel"></i>
                                        Exportar a Excel
                                    </a>
                                    <hr class="export-separator" />
                                    <a asp-action="ExportToCsv" asp-route-id="@Model.Id" class="export-option csv">
                                        <i class="fas fa-file-csv"></i>
                                        Exportar a CSV
                                    </a>
                                    <hr class="export-separator" />
                                    <a asp-action="ExportToJson" asp-route-id="@Model.Id" class="export-option json">
                                        <i class="fas fa-file-code"></i>
                                        Exportar a JSON
                                    </a>
                                    <hr class="export-separator" />
                                    <a asp-action="ExportToXml" asp-route-id="@Model.Id" class="export-option xml">
                                        <i class="fas fa-file-code"></i>
                                        Exportar a XML
                                    </a>
                                </div>
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>

        <!-- KPI Cards - OPTIMIZADAS -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Total Permisos -->
            <div class="relative overflow-hidden bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 text-white shadow-xl card-hover">
                <div class="absolute top-0 right-0 w-24 h-24 bg-white opacity-10 rounded-full -mr-12 -mt-12"></div>
                <div class="relative z-10">
                    <div class="flex items-center gap-3 mb-3">
                        <i class="fas fa-file-alt text-2xl opacity-80"></i>
                        <div>
                            <p class="text-blue-100 text-sm">Total Permisos</p>
                            <p class="text-3xl font-bold">@Model.TotalPermisos</p>
                        </div>
                    </div>
                    <div class="text-sm text-blue-100 flex items-center">
                        <i class="fas fa-chart-line mr-1"></i>
                        <span>En este corte</span>
                    </div>
                </div>
            </div>
            
            <!-- Con Goce de Pago -->
            <div class="relative overflow-hidden bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl p-6 text-white shadow-xl card-hover">
                <div class="absolute top-0 right-0 w-24 h-24 bg-white opacity-10 rounded-full -mr-12 -mt-12"></div>
                <div class="relative z-10">
                    <div class="flex items-center gap-3 mb-3">
                        <i class="fas fa-dollar-sign text-2xl opacity-80"></i>
                        <div>
                            <p class="text-green-100 text-sm">Con Goce</p>
                            <p class="text-3xl font-bold">@Model.ConGoce</p>
                        </div>
                    </div>
                    <div class="text-sm text-green-100">
                        @{
                            var porcentajeConGoce = Model.TotalPermisos > 0 ? (Model.ConGoce * 100.0 / Model.TotalPermisos) : 0;
                        }
                        @porcentajeConGoce.ToString("F1")% del total
                    </div>
                </div>
            </div>
            
            <!-- Pendientes por Revisar -->
            <div class="relative overflow-hidden bg-gradient-to-br from-orange-500 to-red-500 rounded-2xl p-6 text-white shadow-xl card-hover">
                <div class="absolute top-0 right-0 w-24 h-24 bg-white opacity-10 rounded-full -mr-12 -mt-12"></div>
                <div class="relative z-10">
                    <div class="flex items-center gap-3 mb-3">
                        <i class="fas fa-clock text-2xl opacity-80"></i>
                        <div>
                            <p class="text-orange-100 text-sm">Pendientes</p>
                            <p class="text-3xl font-bold">@Model.SinGoce</p>
                        </div>
                    </div>
                    <div class="text-sm text-orange-100">
                        @{
                            var porcentajePendientes = Model.TotalPermisos > 0 ? (Model.SinGoce * 100.0 / Model.TotalPermisos) : 0;
                        }
                        @porcentajePendientes.ToString("F1")% por revisar
                    </div>
                </div>
            </div>
            
            <!-- Días Promedio -->
            <div class="relative overflow-hidden bg-gradient-to-br from-purple-500 to-indigo-600 rounded-2xl p-6 text-white shadow-xl card-hover">
                <div class="absolute top-0 right-0 w-24 h-24 bg-white opacity-10 rounded-full -mr-12 -mt-12"></div>
                <div class="relative z-10">
                    <div class="flex items-center gap-3 mb-3">
                        <i class="fas fa-calendar-day text-2xl opacity-80"></i>
                        <div>
                            <p class="text-purple-100 text-sm">Días Promedio</p>
                            <p class="text-3xl font-bold">@Model.DiasPromedio.ToString("F1")</p>
                        </div>
                    </div>
                    <div class="text-sm text-purple-100">Por permiso</div>
                </div>
            </div>
        </div>

        <!-- Charts Grid -->
        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8 mb-8">
            <!-- Gráfico de Dona (D3.js) -->
            <div class="xl:col-span-1">
                <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100 card-hover">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-gray-800">
                            <i class="fas fa-chart-pie text-indigo-600 mr-3"></i>
                            Distribución por Tipo
                        </h3>
                        <button onclick="animateDonut()" class="bg-indigo-100 hover:bg-indigo-200 text-indigo-700 p-2 rounded-lg transition-all">
                            <i class="fas fa-play text-sm"></i>
                        </button>
                    </div>
                    <div id="donut-chart" class="flex justify-center mb-6"></div>
                    <div id="donut-legend" class="space-y-3"></div>
                </div>
            </div>
            <!-- Gráfico de Área (ApexCharts) -->
            <div class="xl:col-span-2">
                <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100 card-hover">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-8 gap-4">
                        <div>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">
                                <i class="fas fa-chart-area text-purple-600 mr-3"></i>
                                Tendencia Temporal
                            </h3>
                            <p class="text-sm text-gray-600">Evolución de permisos a lo largo del tiempo</p>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="changeChartType('area')" class="bg-purple-100 hover:bg-purple-200 text-purple-700 px-4 py-2 rounded-lg text-sm font-medium transition-all">
                                Área
                            </button>
                            <button onclick="changeChartType('line')" class="bg-blue-100 hover:bg-blue-200 text-blue-700 px-4 py-2 rounded-lg text-sm font-medium transition-all">
                                Líneas
                            </button>
                            <button onclick="changeChartType('bar')" class="bg-green-100 hover:bg-green-200 text-green-700 px-4 py-2 rounded-lg text-sm font-medium transition-all">
                                Barras
                            </button>
                        </div>
                    </div>
                    <div id="area-chart" style="height: 350px;"></div>
                </div>
            </div>
        </div>

        <!-- Gráficos Adicionales -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Barras Horizontales (D3.js) -->
            <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100 card-hover">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-800">
                        <i class="fas fa-building text-emerald-600 mr-3"></i>
                        Permisos por Área
                    </h3>
                    <button onclick="animateBars()" class="bg-emerald-100 hover:bg-emerald-200 text-emerald-700 p-2 rounded-lg transition-all">
                        <i class="fas fa-refresh text-sm"></i>
                    </button>
                </div>
                <div id="horizontal-bars" style="height: 300px;"></div>
            </div>
            <!-- Gráfico Radial (ApexCharts) -->
            <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100 card-hover">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-800">
                        <i class="fas fa-bullseye text-rose-600 mr-3"></i>
                        Goce de Pago
                    </h3>
                    <div class="text-sm text-gray-500">Distribución porcentual</div>
                </div>
                <div id="radial-chart" style="height: 300px;"></div>
            </div>
        </div>

        <!-- Mapa de Calor (D3.js) -->
        <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100 card-hover mb-8">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">
                        <i class="fas fa-calendar-check text-cyan-600 mr-3"></i>
                        Actividad Semanal
                    </h3>
                    <p class="text-sm text-gray-600">Distribución de permisos por día y semana</p>
                </div>
                <button onclick="updateHeatmap()" class="bg-cyan-100 hover:bg-cyan-200 text-cyan-700 px-4 py-2 rounded-lg text-sm font-medium transition-all">
                    Actualizar
                </button>
            </div>
            <div id="heatmap" style="height: 200px;" class="overflow-x-auto"></div>
            <div class="flex justify-center mt-4">
                <div class="flex items-center gap-2 text-sm text-gray-600">
                    <span>Menos</span>
                    <div class="flex gap-1">
                        <div class="w-3 h-3 bg-gray-100 rounded-sm"></div>
                        <div class="w-3 h-3 bg-blue-200 rounded-sm"></div>
                        <div class="w-3 h-3 bg-blue-400 rounded-sm"></div>
                        <div class="w-3 h-3 bg-blue-600 rounded-sm"></div>
                        <div class="w-3 h-3 bg-blue-800 rounded-sm"></div>
                    </div>
                    <span>Más</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/7.8.5/d3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.44.0/apexcharts.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        // Toggle del menú de exportación - versión limpia con CSS
        document.addEventListener('DOMContentLoaded', function() {
            const exportButton = document.getElementById('exportMenuButton');
            const exportMenu = document.getElementById('exportMenu');
            const chevronIcon = document.getElementById('chevronIcon');
            
            if (exportButton && exportMenu) {
                // Función para posicionar el menú ARRIBA del botón
                function positionMenu() {
                    const buttonRect = exportButton.getBoundingClientRect();
                    const menuHeight = exportMenu.offsetHeight || 250;
                    const menuWidth = 256; // 16rem
                    
                    // Posicionar ARRIBA del botón
                    const topPosition = buttonRect.top - menuHeight - 8;
                    const leftPosition = buttonRect.right - menuWidth;
                    
                    exportMenu.style.top = topPosition + 'px';
                    exportMenu.style.left = leftPosition + 'px';
                }
                
                // Mostrar menú
                function showMenu() {
                    exportMenu.classList.remove('hidden');
                    exportMenu.style.opacity = '0';
                    exportMenu.style.transform = 'translateY(10px)';
                    
                    positionMenu();
                    
                    // Forzar reflow
                    void exportMenu.offsetWidth;
                    
                    // Animar
                    requestAnimationFrame(() => {
                        exportMenu.style.opacity = '1';
                        exportMenu.style.transform = 'translateY(0)';
                    });
                    
                    // Rotar chevron
                    chevronIcon.style.transform = 'rotate(180deg)';
                }
                
                // Ocultar menú
                function hideMenu() {
                    exportMenu.style.opacity = '0';
                    exportMenu.style.transform = 'translateY(10px)';
                    chevronIcon.style.transform = 'rotate(0deg)';
                    
                    setTimeout(() => {
                        exportMenu.classList.add('hidden');
                    }, 200);
                }
                
                // Toggle
                exportButton.addEventListener('click', function(e) {
                    e.stopPropagation();
                    exportMenu.classList.contains('hidden') ? showMenu() : hideMenu();
                });
                
                // Cerrar al hacer clic fuera
                document.addEventListener('click', function(event) {
                    if (!exportButton.contains(event.target) && 
                        !exportMenu.contains(event.target) && 
                        !exportMenu.classList.contains('hidden')) {
                        hideMenu();
                    }
                });
                
                // Reposicionar en scroll/resize
                window.addEventListener('scroll', () => {
                    if (!exportMenu.classList.contains('hidden')) positionMenu();
                });
                
                window.addEventListener('resize', () => {
                    if (!exportMenu.classList.contains('hidden')) positionMenu();
                });
                
                // Prevenir cierre al hacer clic dentro
                exportMenu.addEventListener('click', (e) => e.stopPropagation());
                
                // Cerrar con Escape
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape' && !exportMenu.classList.contains('hidden')) {
                        hideMenu();
                    }
                });
                
                console.log('✓ Export menu initialized with CSS classes');
            }
        });
    </script>
    <script src="~/js/Cortes/details.js" asp-append-version="true"></script>
}